<%= form_for([@movie, @review]) do |f| %>
<%= render "shared/errors", object: @review %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %><br/>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :stars %>
        <%= f.select :stars, Review::STARS, prompt: "Pick one" %>
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p>
      <% if @review.new_record? %>
        <%= f.submit 'Post Review' %>
        <%= link_to "Cancel", movie_path(@movie), class: 'button' %>
      <% else %>
        <%= f.submit 'Update Review' %>
        <%= link_to "Cancel", movie_reviews_path(@movie), class: 'button' %>
      <% end %>
    </p>
  </fieldset>
<% end %>